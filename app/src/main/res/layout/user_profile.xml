<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person_black_24dp"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="2dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/user_profile_image_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_margin="@dimen/eight_dp"
            android:src="@drawable/ic_insert_photo_black_24dp"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שם"
        android:textStyle="bold"
        android:textSize="@dimen/bodyTextView"
        android:textColor="@color/White"
        android:layout_marginLeft="@dimen/eight_dp"
        android:id="@+id/user_profile_name_textView"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            android:id="@+id/user_profile_name_edit_button"/>
    </LinearLayout>

    <EditText
        android:visibility="gone"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:id="@+id/user_profile_name"
        style="@style/CustomEditView"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:inputType="textPersonName"
        android:textStyle="bold"
        android:textSize="@dimen/bodyTextView"
        android:hint="@string/name"
        android:maxLength="20"
        android:minWidth="@dimen/edit_text_min_width"
        android:textColor="@color/White"
        android:textColorHint="@color/editTextHintGray"
       />
    <Button
        android:visibility="gone"
        android:id="@+id/user_profile_save"
        style="@style/CustomButtonView"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:maxWidth="500dp"
        android:text="@string/update"/>

    </LinearLayout>